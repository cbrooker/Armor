@model Armor.Web.Models.PatientAssessmentViewModel

@{
    ViewBag.Title = "Armor - Patient Assessment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="@Url.Content("~/Scripts/PatientAssessment.js")" type="text/javascript"></script>

<div id="registationProfileButton">
    <input type="button" value="Edit Profile" id="RegistrationButton" class="blue-action-button" />
</div>
<div class="assessment padding">
<h2>Patient Assessment</h2>


<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

        <div id="Section2" class="horizontalSlide" >
            <h3>Page 2 of 4</h3>
            <div class="editor-label">
                @*@Html.LabelFor(model => model.Question6)*@
                6. Average number of alcoholic drinks per week
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.Question6)
                @Html.ValidationMessageFor(model => model.Question6)
            </div>
    <div class="numbers">

            <div class="editor-label">
                @*@Html.LabelFor(model => model.Question7)*@
                7. Does this patient use illicit/recreational drugs?
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.Question7, "AnswerOptions")
                @Html.ValidationMessageFor(model => model.Question7)
            </div>
    </div>
    <div class="question8">
            <div class="editor-label">
                @*@Html.LabelFor(model => model.Question8)*@
                8. History of
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.Question8, "AnswerCheckboxes")
                @Html.ValidationMessageFor(model => model.Question8)
            </div>
    </div>
        
            <div class="editor-label">
                @*@Html.LabelFor(model => model.Question9)*@
                9. Which of the following medication(s) is this patient currently taking to manage their OA symptoms? (Select all that apply)
            </div>
            <div class="editor-field">
   <table>
                    <tr>
                        <th>Medication</th>
                        <th colspan="2">Dose (mg/day)</th>
                    </tr>
                    <tr>
                        <td>Acetaminophen</td>
                        <td><label>@Html.RadioButton("Question9_Acetaminophen", "Acetaminophen < 3000mg/day") < 3000</label>
                                                </td><td><label>@Html.RadioButton("Question9_Acetaminophen", "Acetaminophen >3000mg/day") > 3000</label>

                    </td></tr>
                   <!-- <tr>
                        <td>Traditional NSAID</td>
                        <td></td>
                    </tr> -->
                    <tr>
                        <td class="indent">Aspirin (>300 mg)</td>
                        <td><label>@Html.RadioButton("Question9_Aspirin", "Aspirin < 3000") < 3000</label></td><td><label>@Html.RadioButton("Question9_Aspirin", "Aspirin > 3000") > 3000</label>
                    </td></tr>
                    <tr>
                        <td class="indent">Diclofenac</td>
                        <td><label>@Html.RadioButton("Question9_Diclofenac", "Diclofenac 100") 100</label></td><td><label>@Html.RadioButton("Question9_Diclofenac", "Diclofenac 150mg/day") 150</label></td>
                    </tr>
                    <tr>
                        <td class="indent">Diclofenac/misoprostol</td>
                        <td><label>@Html.RadioButton("Question9_DiclofenacMisoprostol", "Diclofenac/Misoprostol 100 mg diclofenac/day") 100 (diclofenac) </label></td><td><label>@Html.RadioButton("Question9_DiclofenacMisoprostol", "Diclofenac/Misoprostol 150 mg diclofenac/day") 150 (diclofenac)</label></td>
                    </tr>
                    <tr>
                        <td class="indent">Ibuprofen</td>
                        <td><label>@Html.RadioButton("Question9_Ibuprofen", "Ibuprofen < 1200mg/day") < 1200mg/day</label></td><td><label>@Html.RadioButton("Question9_Ibuprofen", "Ibuprofen >= 1200mg/day") >= 1200mg/day</label>
                    </td></tr>
                    <tr>
                        <td class="indent">Indomethacin</td>
                        <td><label>@Html.RadioButton("Question9_Indomethacin", "Indomethacin < 200") < 200</label></td><td><label>@Html.RadioButton("Question9_Indomethacin", "Indomethacin >= 200") >= 200</label></td>
                    </tr>
                    <tr>
                        <td class="indent">Meloxicam</td>
                        <td><label>@Html.RadioButton("Question9_Meloxicam", "Meloxicam < 15") < 15</label></td><td><label>@Html.RadioButton("Question9_Meloxicam", "Meloxicam >= 15") >= 15</label></td>
                    </tr>
                    <tr>
                        <td class="indent">Naproxen</td>
                        <td><label>@Html.RadioButton("Question9_Naproxen", "Naproxen < 1000") < 1000</label></td><td><label>@Html.RadioButton("Question9_Naproxen", "Naproxen >= 1000") >= 1000</label></td>
                    </tr>
                    <tr>
                        <td class="indent">Naproxen—PPI
                        </td><td><label>@Html.RadioButton("Question9_Naproxen—PPI", "Naproxen—PPI < 1000") < 1000 (naproxen)</label></td><td><label>@Html.RadioButton("Question9_Naproxen—PPI", "Naproxen—PPI >= 1000") >= 1000 (naproxen)</label></td>
                    </tr>
                  <!--  <tr>
                        <td>Coxibs</td>
                        <td></td>
                    </tr> -->
                    <tr>
                        <td class="indent">Celecoxib</td>
                        <td><label>@Html.RadioButton("Question9_Celecoxib", "Celecoxib < 200") < 200</label></td><td><label>@Html.RadioButton("Question9_Celecoxib", "Celecoxib >= 200") >= 200</label></td>
                    </tr>
                   <!-- <tr>
                        <td>Opioids/combinations</td>
                        <td></td>
                    </tr> -->
                    <tr>
                        <td class="indent">Acetaminophen/tramadol</td>
                        <td><label>@Html.RadioButton("Question9_Acetaminophen/tramadol", "Acetaminophen/tramadol < 3000/300") < 3000/300</label></td><td><label>@Html.RadioButton("Question9_Acetaminophen/tramadol", "Acetaminophen/tramadol > 3000/300") > 3000/300</label></td>
                    </tr>
                    <tr>
                        <td class="indent">Codeine (in combination with acetaminophen)</td>
                        <td><label>@Html.RadioButton("Question9_Codeine", "Codeine < 360") < 360 (codeine)</label></td><td><label>@Html.RadioButton("Question9_Codeine", "Codeine > 360") > 360 (codeine)</label></td>
                    </tr>
                    <tr>
                        <td class="indent">Tramadol</td>
                        <td><label>@Html.RadioButton("Question9_Tramadol", "Tramadol < 300") < 300</label></td><td><label>@Html.RadioButton("Question9_Tramadol", "Tramadol > 300") > 300</label></td>
                    </tr>
                    <tr>
                        <td class="indent">Other</td>
                        <td>@Html.TextBox("Question9_Other")</td>
                        <td></td>
                    </tr>
                </table>
            </div>
            <div class="submitButton">
                <input type="button"  onclick="$(form).submit();" value="Next ->" />
            </div>
        </div>
    
    
}
</div>
