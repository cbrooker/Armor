@model Armor.Web.Models.ProgramEvaluator1ViewModel

@{
    ViewBag.Title = "Armor - " + ViewRes.Assessment.ProgramEvaluatorStage1.Title2;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="@Url.Content("~/Scripts/ProgramEvaluatorStage1.js")" type="text/javascript"></script>

<div id="registationProfileButton">
    <input type="button" value="@ViewRes.SharedString.EditProfile" id="RegistrationButton" class="blue-action-button" />
</div>

<div class="evaluator padding">
<h2>@ViewRes.Assessment.ProgramEvaluatorStage1.Title2</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    
    <div style="overflow: hidden;">
        <div id="Section1" class="horizontalSlide">
            <h3>@ViewRes.SharedString.Page 1 @ViewRes.SharedString.of 5</h3>
            <h4>@Html.Raw(ViewRes.Assessment.ProgramEvaluatorStage1.PleaseRate)</h4>
            <div class="editor-label intQuestion">
                @*@Html.LabelFor(model => model.Question1)*@
                @ViewRes.Assessment.ProgramEvaluatorStage1.Question1
            </div>
            <div class="editor-field intQuestion">
                @Html.EditorFor(model => model.Question1, "OneToTenInt")
                @Html.ValidationMessageFor(model => model.Question1)
            </div>

            <div class="editor-label intQuestion">
                @*@Html.LabelFor(model => model.Question2)*@
                @ViewRes.Assessment.ProgramEvaluatorStage1.Question2
            </div>
            <div class="editor-field intQuestion">
                @Html.EditorFor(model => model.Question2, "OneToTenInt")
                @Html.ValidationMessageFor(model => model.Question2)
            </div>

            <div class="editor-label intQuestion">
                @*@Html.LabelFor(model => model.Question3)*@
                @ViewRes.Assessment.ProgramEvaluatorStage1.Question3
            </div>
            <div class="editor-field intQuestion">
                @Html.EditorFor(model => model.Question3, "OneToTenInt")
                @Html.ValidationMessageFor(model => model.Question3)
            </div>
            <div class="submitButton">
                <input type="button"  onclick="$(form).submit();" value="@ViewRes.SharedString.Next ->" />
            </div>
        </div>
    </div>
}
</div>
