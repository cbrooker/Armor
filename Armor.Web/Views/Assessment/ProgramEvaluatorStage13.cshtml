@model Armor.Web.Models.ProgramEvaluator1ViewModel

@{
    ViewBag.Title = "Armor - Program Evaluator Stage 1";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="@Url.Content("~/Scripts/ProgramEvaluatorStage1.js")" type="text/javascript"></script>

<div id="registationProfileButton">
    <input type="button" value="Edit Profile" id="RegistrationButton" class="blue-action-button" />
</div>

<div class="evaluator padding">
<h2>Program Evaluator Stage 1</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    
    <div style="overflow: hidden;">

        <div id="Section3" class="horizontalSlide">
            <h3>Page 3 of 5</h3>
            <div class="editor-label">
                @*@Html.LabelFor(model => model.Question12)*@
                12. In the LOGICA study, what percentage of 3,293 patients were at increased risk of experiencing a GI adverse event with NSAID use?
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.Question12, "AnswerOptions")
                @Html.ValidationMessageFor(model => model.Question12)
            </div>

            <div class="editor-label">
                @*@Html.LabelFor(model => model.Question13)*@
                13. What was the most common GI risk factor in the LOGICA study?
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.Question13, "AnswerOptions")
                @Html.ValidationMessageFor(model => model.Question13)
            </div>

            <div class="editor-label">
                @*@Html.LabelFor(model => model.Question14)*@
                14. What is your preferred treatment strategy for patients with OA who do not respond to acetaminophen and are at <span class="underline">moderate</span> risk of GI adverse events with NSAIDs?
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.Question14, "AnswerOptions")
                @Html.EditorFor(model => model.Question14Other)
                @Html.ValidationMessageFor(model => model.Question14Other)
                @Html.ValidationMessageFor(model => model.Question14)
            </div>

            <div class="editor-label">
                @*@Html.LabelFor(model => model.Question15)*@
                15. What is your preferred treatment strategy for patients with OA who do not respond to acetaminophen and are at <span class'underline'>high</span> risk of GI adverse events with NSAIDs?
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.Question15, "AnswerOptions")
                @Html.EditorFor(model => model.Question15Other)
                @Html.ValidationMessageFor(model => model.Question15Other)
                @Html.ValidationMessageFor(model => model.Question15)
            </div>
            <div class="submitButton">
                <input type="button"  onclick="$(form).submit();" value="Next ->" />
            </div>
        </div>
    </div>
}
</div>
