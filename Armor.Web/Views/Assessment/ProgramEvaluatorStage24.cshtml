@model Armor.Web.Models.ProgramEvaluator1ViewModel

@{
    ViewBag.Title = "Armor - " + ViewRes.Assessment.ProgramEvaluatorStage1.Title2;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="@Url.Content("~/Scripts/ProgramEvaluatorStage1.js")" type="text/javascript"></script>

<div id="registationProfileButton">
    <input type="button" value="@ViewRes.SharedString.EditProfile" id="RegistrationButton" class="blue-action-button" />
</div>

<div class="evaluator padding">
<h2>@ViewRes.Assessment.ProgramEvaluatorStage1.Title2</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    
    <div style="overflow: hidden;">
            
        <div id="Section4" class="horizontalSlide">
            <h3>@ViewRes.SharedString.Page 4 @ViewRes.SharedString.of 5</h3>
            <h4>@ViewRes.Assessment.ProgramEvaluatorStage1.HeadingBefore16</h4>
    
            <div class="editor-label">
                @*@Html.LabelFor(model => model.Question16)*@
                @ViewRes.Assessment.ProgramEvaluatorStage1.Question16
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.Question16, "AnswerOptions")
                @Html.ValidationMessageFor(model => model.Question16)
            </div>

            <div class="editor-label">
                @*@Html.LabelFor(model => model.Question17)*@
                @ViewRes.Assessment.ProgramEvaluatorStage1.Question17
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.Question17, "AnswerCheckboxes")
                @Html.ValidationMessageFor(model => model.Question17)
                @Html.EditorFor(model => model.Question17Other)
                @Html.ValidationMessageFor(model => model.Question17Other)
            </div>

            <div class="editor-label">
                @*@Html.LabelFor(model => model.Question18)*@
                @ViewRes.Assessment.ProgramEvaluatorStage1.Question18
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.Question18, "AnswerOptions")
                @Html.ValidationMessageFor(model => model.Question18)
            </div>

            <div class="editor-field">
                @Html.EditorFor(model => model.Question18Other)
                @Html.ValidationMessageFor(model => model.Question18Other)
            </div>
            <div class="submitButton">
                <input type="button"  onclick="$(form).submit();" value="@ViewRes.SharedString.Next ->" />
            </div>
        </div>

    </div>
}
</div>
