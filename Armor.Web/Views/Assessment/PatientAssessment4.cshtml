@model Armor.Web.Models.PatientAssessmentViewModel

@{
    ViewBag.Title = "Armor - Patient Assessment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="@Url.Content("~/Scripts/PatientAssessment.js")" type="text/javascript"></script>

<div id="registationProfileButton">
    <input type="button" value="Edit Profile" id="RegistrationButton" class="blue-action-button" />
</div>
<div class="assessment padding">
<h2>Patient Assessment</h2>


<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

        <div id="Section4" class="horizontalSlide">
            <h3>Page 4 of 4</h3>
            <div class="editor-label">
                @*@Html.LabelFor(model => model.Question12)*@
                12. Your patient’s GI risk: <h3 class="GIRisk"></h3>
            </div>
            <div class="editor-field">
                @*Karim - This can be changed to show the results in pretty much anyway you want, just let me know.*@
                @*@Html.EditorFor(model => model.Question12)*@
                @Html.HiddenFor(model => model.Question12, new { @class = "GIRisk" })
            </div>

    
    
            <div class="editor-label">
                @*@Html.LabelFor(model => model.Question13)*@
                13. Knowing this patient’s level of GI risk, what changes will you make to their OA medication(s)? (Check all that apply)
            </div>
            <div class="editor-field">
                <table>
                    <tr>
                        <td>@Html.RadioButton("Ques13Radio", "No Change")</td>
                        <td colspan="2">No Change</td>
                    </tr>
                    <tr>
                        <td>@Html.RadioButton("Ques13Radio", "Switch to")</td>
                        <td colspan="2">
                            Switch to:<br />
                            <table>
                                
                                <tr>
                                    <th>Medication</th>
                                    <th colspan="2">Dose (mg/day)</th>
                                </tr>
                                <tr>
                                    <td>Acetaminophen</td>
                                    <td><label>@Html.RadioButton("Question13_Acetaminophen", "Acetaminophen < 3000") < 3000</label></td><td><label>@Html.RadioButton("Question13_Acetaminophen", "Acetaminophen > 3000") > 3000</label>
                                </td></tr>
                              <!--  <tr>
                                    <td>Traditional NSAID</td>
                                    <td></td>
                                </tr>-->
                                <tr>
                                    <td class="indent">Aspirin (>300 mg)</td>
                                    <td><label>@Html.RadioButton("Question13_Aspirin", "Aspirin < 3000") < 3000</label></td><td><label>@Html.RadioButton("Question13_Aspirin", "Aspirin > 3000") > 3000</label>
                                </td></tr>
                                <tr>
                                    <td class="indent">Diclofenac</td>
                                    <td><label>@Html.RadioButton("Question13_Diclofenac", "Diclofenac 100") 100</label></td><td><label>@Html.RadioButton("Question13_Diclofenac", "Diclofenac 150") 150</label></td>
                                </tr>
                                <tr>
                                    <td class="indent">Diclofenac/misoprostol</td>
                                    <td><label>@Html.RadioButton("Question13_DiclofenacMisoprostol", "Diclofenac/Misoprostol 100 (diclofenac)") 100 (diclofenac) </label></td><td><label>@Html.RadioButton("Question13_DiclofenacMisoprostol", "Diclofenac/Misoprostol 150 (diclofenac)") 150 (diclofenac)</label></td>
                                </tr>
                                <tr>
                                    <td class="indent">Ibuprofen</td>
                                    <td><label>@Html.RadioButton("Question13_Ibuprofen", "Ibuprofen < 1200") < 1200</label></td><td><label>@Html.RadioButton("Question13_Ibuprofen", "Ibuprofen >= 1200") >= 1200</label></td>
                                </tr>
                                <tr>
                                    <td class="indent">Indomethacin</td>
                                    <td><label>@Html.RadioButton("Question13_Indomethacin", "Indomethacin < 200") < 200</label></td><td><label>@Html.RadioButton("Question13_Indomethacin", "Indomethacin >= 200") >= 200</label></td>
                                </tr>
                                <tr>
                                    <td class="indent">Meloxicam</td>
                                    <td><label>@Html.RadioButton("Question13_Meloxicam", "Meloxicam < 15") < 15</label></td><td><label>@Html.RadioButton("Question13_Meloxicam", "Meloxicam >= 15") >= 15</label></td>
                                </tr>
                                <tr>
                                    <td class="indent">Naproxen</td>
                                    <td><label>@Html.RadioButton("Question13_Naproxen", "Naproxen < 1000") < 1000</label></td><td><label>@Html.RadioButton("Question13_Naproxen", "Naproxen >= 1000") >= 1000</label></td>
                                </tr>
                                <tr>
                                    <td class="indent">Naproxen—PPI
                                    </td><td><label>@Html.RadioButton("Question13_Naproxen—PPI", "Naproxen—PPI < 1000") < 1000 (naproxen)</label></td><td><label>@Html.RadioButton("Question13_Naproxen—PPI", "Naproxen—PPI >= 1000") >= 1000 (naproxen)</label></td>
                                </tr>
            <!--                    <tr>
                                    <td>Coxibs</td>
                                    <td></td>
                                </tr>-->
                                <tr>
                                    <td class="indent">Celecoxib</td>
                                    <td><label>@Html.RadioButton("Question13_Celecoxib", "Celecoxib < 200") < 200</label></td><td><label>@Html.RadioButton("Question13_Celecoxib", "Celecoxib >= 200") >= 200</label></td>
                                </tr>
            <!--                    <tr>
                                    <td>Opioids/combinations</td>
                                    <td></td>
                                </tr>-->
                                <tr>
                                    <td class="indent">Acetaminophen/tramadol</td>
                                    <td><label>@Html.RadioButton("Question13_Acetaminophen/tramadol", "Acetaminophen/tramadol < 3000/300") < 3000/300</label></td><td><label>@Html.RadioButton("Question13_Acetaminophen/tramadol", "Acetaminophen/tramadol > 3000/300") > 3000/300</label></td>
                                </tr>
                                <tr>
                                    <td class="indent">Codeine (in combination with acetaminophen)</td>
                                    <td><label>@Html.RadioButton("Question13_Codeine", "Codeine < 360") < 360 (codeine)</label></td><td><label>@Html.RadioButton("Question13_Codeine", "Codeine > 360") > 360 (codeine)</label></td>
                                </tr>
                                <tr>
                                    <td class="indent">Tramadol</td>
                                    <td><label>@Html.RadioButton("Question13_Tramadol", "Tramadol < 300") < 300</label></td><td><label>@Html.RadioButton("Question13_Tramadol", "Tramadol > 300") > 300</label></td>
                                </tr>
								
                            </table>
                        </td>
                    </tr>
					<tr>
                        <td>@Html.RadioButton("Question13_Gastro", "Add a gastroprotective agent")</td>
                        <td>Add a gastroprotective agent</td>
                        <td></td>
                    </tr>
                    <tr>
                        <td>@Html.RadioButton("Ques13Radio", "Other")</td>
                        <td>Other</td>
                        <td>@Html.TextBox("Question13_Other")</td>
                    </tr>
                </table>
                


                @Html.ValidationMessageFor(model => model.Question13)


                <div class="submitButton">
                <input type="submit" value="Submit" class="green-action-button" />
            </div>
            </div>
        </div>
}
</div>
