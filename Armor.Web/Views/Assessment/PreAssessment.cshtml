@model Armor.Web.Models.PreAssessmentViewModel

@{
    ViewBag.Title = "Armor - Pre-Assessment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="@Url.Content("~/Scripts/PreAssessment.js")" type="text/javascript"></script>

<div class="preassessment padding">
<h2>Pre-Assessment Questionnaire</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <div style="overflow: hidden;">

        <div id="Section1" class="horizontalSlide">
            <h3>Page 1 of 3</h3>
            <div class="editor-label">
                1. What percentage of patients in your practice have OA?
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.Question1)
                @Html.ValidationMessageFor(model => model.Question1)
            </div>

            <div class="editor-label">
                2. What percentage of your patients with OA are taking an NSAID?
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.Question2)
                @Html.ValidationMessageFor(model => model.Question2)
            </div>

            <h4>The following questions apply only to the patients in your practice who meet the following criteria:</h4>
            <ul>
                <li>Diagnosis of osteoarthritis</li>
                <li>Aged 18 years or older</li>
                <li>Has pain that interferes with normal daily activities</li>
                <li>Has an indication for NSAID treatment</li>
            </ul>
    
            <div class="editor-label">
                3. What percentage of these patients are older than 60 years of age?
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.Question3)
                @Html.ValidationMessageFor(model => model.Question3)
            </div>

            <div class="editor-label">
                4. What percentage of these patients are overweight?
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.Question4)
                @Html.ValidationMessageFor(model => model.Question4)
            </div>
        </div>
    </div>
    <div class="submitButton">
        <input type="button"  onclick="$(form).submit();" value="Next ->" />
    </div>
}
</div>