@model Armor.Web.Models.PatientAssessmentViewModel

@{
    ViewBag.Title = "Armor - " + @ViewRes.Assessment.PatientAssessment.Title;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="@Url.Content("~/Scripts/PatientAssessment.js")" type="text/javascript"></script>

<div id="registationProfileButton">
    <input type="button" value="@ViewRes.SharedString.EditProfile" id="RegistrationButton" class="blue-action-button" />
</div>
<div class="assessment padding">
<h2>@ViewRes.Assessment.PatientAssessment.Title</h2>
@Html.Raw(ViewRes.Assessment.PatientAssessment.TopTextBlur)

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

        <div id="Section1" class="horizontalSlide">
            <h3>@ViewRes.SharedString.Page 1 @ViewRes.SharedString.of 4</h3>
            <div class="numbers">
                <div class="editor-label">
                    @*@Html.LabelFor(model => model.Question1)*@
                    
                    @ViewRes.Assessment.PatientAssessment.Question1
                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.Question1, "AnswerOptions")
                    @Html.ValidationMessageFor(model => model.Question1)
                </div>
            </div>
            <div class="numbers">

            <div class="editor-label">
            @*@Html.LabelFor(model => model.Question2)*@
            @ViewRes.Assessment.PatientAssessment.Question2
            </div>
            <div class="editor-field">
            @Html.EditorFor(model => model.Question2, "AnswerOptions")
            @Html.ValidationMessageFor(model => model.Question2)
            </div>
            </div>
            
            <div class="editor-label">
                @*@Html.LabelFor(model => model.Question3)*@
                @ViewRes.Assessment.PatientAssessment.Question3
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.Question3, "AnswerCheckboxes")
                @Html.ValidationMessageFor(model => model.Question3)
            </div>
            
            <div class="numbers">
                <div class="editor-label">
                    @*@Html.LabelFor(model => model.Question4)*@
                    @ViewRes.Assessment.PatientAssessment.Question4
                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.Question4, "AnswerOptions")
                    @Html.ValidationMessageFor(model => model.Question4)
                </div>
            </div>
            <div class="editor-label">
                @*@Html.LabelFor(model => model.Question5)*@
                @ViewRes.Assessment.PatientAssessment.Question5
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.Question5, "AnswerOptions")
                @Html.ValidationMessageFor(model => model.Question5)
            </div>

            <div class="submitButton">
                <input type="button"  onclick="$(form).submit();" value="@ViewRes.SharedString.Next ->" />
            </div>
        </div>

}
</div>
