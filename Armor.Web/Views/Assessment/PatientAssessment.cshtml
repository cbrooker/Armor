@model Armor.Web.Models.PatientAssessmentViewModel

@{
    ViewBag.Title = "Armor - Patient Assessment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="@Url.Content("~/Scripts/PatientAssessment.js")" type="text/javascript"></script>

<div id="registationProfileButton">
    <input type="button" value="Edit Profile" id="RegistrationButton" class="blue-action-button" />
</div>
<div class="assessment padding">
<h2>Patient Assessment</h2>
<h3>To be completed by physician for patients who meet the following criteria:</h3>
<div class="criteria">
    <ul>
        <li>Diagnosis of osteoarthritis</li>
        <li>Aged 18 years or older</li>
        <li>Has pain that interferes with normal daily activities</li>
        <li>Has an indication for NSAID treatment</li>
    </ul>
</div>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

        <div id="Section1" class="horizontalSlide">
            <h3>Page 1 of 4</h3>
            <div class="numbers">
                <div class="editor-label">
                    @*@Html.LabelFor(model => model.Question1)*@
                    1. Age
                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.Question1, "AnswerOptions")
                    @Html.ValidationMessageFor(model => model.Question1)
                </div>
            </div>
            <div class="numbers">

            <div class="editor-label">
            @*@Html.LabelFor(model => model.Question2)*@
            2. Gender
            </div>
            <div class="editor-field">
            @Html.EditorFor(model => model.Question2, "AnswerOptions")
            @Html.ValidationMessageFor(model => model.Question2)
            </div>
            </div>
            
            <div class="editor-label">
                @*@Html.LabelFor(model => model.Question3)*@
                3. Type of OA (select all that apply)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.Question3, "AnswerCheckboxes")
                @Html.ValidationMessageFor(model => model.Question3)
            </div>
            
            <div class="numbers">
                <div class="editor-label">
                    @*@Html.LabelFor(model => model.Question4)*@
                    4. Is this patient overweight (ie, BMI >25)
                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.Question4, "AnswerOptions")
                    @Html.ValidationMessageFor(model => model.Question4)
                </div>
            </div>
            <div class="editor-label">
                @*@Html.LabelFor(model => model.Question5)*@
                5. Smoking status
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.Question5, "AnswerOptions")
                @Html.ValidationMessageFor(model => model.Question5)
            </div>

            <div class="submitButton">
                <input type="button"  onclick="$(form).submit();" value="Next ->" />
            </div>
        </div>

}
</div>
