@model Armor.Web.Models.PatientAssessmentViewModel

@{
    ViewBag.Title = "Armor - " + @ViewRes.Assessment.PatientAssessment.Title;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="@Url.Content("~/Scripts/PatientAssessment.js")" type="text/javascript"></script>

<div id="registationProfileButton">
    <input type="button" value="@ViewRes.SharedString.EditProfile" id="RegistrationButton" class="blue-action-button" />
</div>
<div class="assessment padding">
<h2>@ViewRes.Assessment.PatientAssessment.Title</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    
        <div id="Section3" class="horizontalSlide">
            <h3>@ViewRes.SharedString.Page 3 @ViewRes.SharedString.of 4</h3>
    
            <div class="editor-label">
                @*@Html.LabelFor(model => model.Question10)*@
                @ViewRes.Assessment.PatientAssessment.Question10
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.Question10, "AnswerCheckboxes")
                @Html.ValidationMessageFor(model => model.Question10)
            </div>
    
    
            <div class="editor-label">
                @*@Html.LabelFor(model => model.Question11)*@
                @ViewRes.Assessment.PatientAssessment.Question11
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.Question11, "AnswerOptions")
                @Html.ValidationMessageFor(model => model.Question11)
            </div>
    

            <div class="submitButton">
                <input type="button"  onclick="$(form).submit();" value="@ViewRes.SharedString.Next ->" />
            </div>
        
        </div>
   
}
</div>
