@model Armor.Web.Models.LoginModel
<div class="loginView padding">
<h2>@ViewRes.Account.Login.LoginWord</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm("Login", "Account", FormMethod.Post, new { enctype = "multipart/form-data" })) {
    @Html.ValidationSummary(true)
    <fieldset>
       <!-- <legend>LoginModel</legend> -->

        <div class="editor-label">
            @Html.LabelFor(model => model.EmailAddress)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.EmailAddress)
            @Html.ValidationMessageFor(model => model.EmailAddress)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Password)
        </div>
        <div class="editor-field">
            @Html.PasswordFor(model => model.Password, new { @autocomplete = "off" } )
            @Html.ValidationMessageFor(model => model.Password)
        </div>

       @* <div class="editor-label">
            @Html.LabelFor(model => model.RememberMe)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.RememberMe)
            @Html.ValidationMessageFor(model => model.RememberMe)
        </div>*@

       <div class="loginButton">
            <input type="submit" value="@ViewRes.Account.Login.LoginWord" class="green-action-button" />
        </div>
		<div class="lostPassword">
		<strong>@ViewRes.Account.Login.ForgotPassword</strong><br />
        @ViewRes.Account.Login.ForgotPasswordBlurb1<br />
        @Html.ActionLink(ViewRes.Account.Login.ClickHere, "ForgotPassword", "Account") 
        @ViewRes.Account.Login.ForgotPasswordBlurb2
        
		</div>
    </fieldset>
}

</div>

